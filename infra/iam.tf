# ECS Task Role (Application Permissions)
resource "aws_iam_role" "ecs_task_role" {
  name = "ecs-task-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Action = "sts:AssumeRole"
      Effect = "Allow"
      Principal = {
        Service = "ecs-tasks.amazonaws.com"
      }
    }]
  })
}

resource "aws_iam_role_policy" "ecs_task_role_policy" {
  name = "ecs-task-role-policy"
  role = aws_iam_role.ecs_task_role.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "cloudwatch:PutMetricData",
          "logs:CreateLogStream",
          "logs:PutLogEvents",
          "elasticache:*"
        ]
        Resource = "*"
      }
    ]
  })
}

# Output the role ARNs for reference when setting up ECS
output "ecs_task_role_arn" {
  value = aws_iam_role.ecs_task_role.arn
}

output "ecs_task_execution_role_arn" {
  value = aws_iam_role.ecs_task_execution_role.arn
}

/*
Lambda Role:
Can query Elasticache (through VPC access)
Can publish metrics to CloudWatch
Has basic Lambda logging permissions

ECS Task Execution Role:
Can pull images from ECR
Can write logs to CloudWatch
Can interact with Elasticache (through VPC access)
Uses AWS managed policy for basic ECS task execution

Auto Scaling Role:
Uses AWS managed policy for ECS auto scaling
Can manage ECS service scaling

*/
